public class XMLServiceGenerator {
    
    public static String XPATH_USER = "/TWS/EP/PU";
    
    public static String getUserXPath( String cn, String o, String ou ){
        String xPath = XPATH_USER + "/User[@dname='CN="+ cn +", O="+ o +", OU="+ou+"']";
        return xPath;
    }    
    
